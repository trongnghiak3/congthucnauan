<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Đăng Ký - KemzRecipe</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="min-h-screen flex items-center justify-center">
    <div class="max-w-md w-full bg-white shadow-lg rounded-lg p-8">
      <h2 class="text-2xl font-bold text-center mb-6">Đăng Ký</h2>
      <form action="/register" method="POST" class="space-y-4">
        <!-- Tên -->
        <div>
          <label for="name" class="block text-gray-700 font-semibold mb-2">Tên</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            placeholder="Nhập tên của bạn"
            class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <!-- Email -->
        <div>
          <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            placeholder="Nhập email của bạn"
            class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <!-- Mật khẩu -->
        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-2">Mật khẩu</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            required 
            placeholder="Nhập mật khẩu của bạn"
            class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <!-- Xác nhận mật khẩu -->
        <div>
          <label for="confirmPassword" class="block text-gray-700 font-semibold mb-2">Xác nhận mật khẩu</label>
          <input 
            type="password" 
            id="confirmPassword" 
            name="confirmPassword" 
            required 
            placeholder="Xác nhận mật khẩu của bạn"
            class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <!-- Nút đăng ký -->
        <div>
          <button 
            type="submit" 
            class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition duration-200"
          >
            Đăng Ký
          </button>
        </div>
        <!-- Liên kết chuyển hướng -->
        <div class="text-center">
          <p class="text-sm text-gray-600">Đã có tài khoản? <a href="/login" class="text-blue-500 hover:underline">Đăng nhập ngay</a></p>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
